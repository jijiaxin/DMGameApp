<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.stx.xhb.dmgameapp.fragment.ArticleFragment">
    <!-- 标题 -->
    <include layout="@layout/title_layout"></include>


    <com.stx.xhb.dmgameapp.view.PagerSlidingTabStrip
        android:id="@+id/article_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:pstsActivateTextColor="@color/colorPrimary"
        app:pstsDeactivateTextColor="@color/colorPrimary"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@color/colorPrimary"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="true"
        app:pstsTabSwitch="true"
        app:pstsUnderlineColor="@android:color/transparent"
        android:background="#ffffffff"
        app:pstsUnderlineHeight="2dp" />
    <!--<com.viewpagerindicator.TabPageIndicator-->
        <!--android:id="@+id/article_indicator"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/colorWhite" />-->

    <android.support.v4.view.ViewPager
        android:id="@+id/article_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
