<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.stx.xhb.dmgameapp.fragment.MyFragment">

    <!-- 标题 -->
    <include layout="@layout/title_layout"></include>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_xiaomai_top"
        android:orientation="vertical">

        <!-- 左上角的设置 -->


        <!-- 这个作为会员标识 现在不显示 -->

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/setting"
            android:scaleType="centerInside"
            android:visibility="gone" />
        <!-- 用户头像，用户等级  积分等信息 -->

        <ImageView
            android:id="@+id/iv_portrait_unlogin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_after_loading" />

        <ImageView
            android:id="@+id/iv_portrait_unlogin_cover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_unlogin" />

        <TextView
            android:id="@+id/name_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_portrait_unlogin_cover"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="未登录"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/txt_size_first" />
    </RelativeLayout>

