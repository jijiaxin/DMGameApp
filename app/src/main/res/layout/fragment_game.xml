<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.stx.xhb.dmgameapp.fragment.GameFragment">

    <!-- 标题 -->
    <include layout="@layout/title_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏类型："
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/game_spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/edittext1"
            android:spinnerMode="dialog"></Spinner>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.finalteam.loadingviewfinal.PtrClassicFrameLayout
                android:id="@+id/ptr_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.classic.common.MultipleStatusView
                    android:id="@+id/multiplestatusview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:emptyView="@layout/custom_empty_view"
                    app:errorView="@layout/custom_error_view"
                    app:loadingView="@layout/custom_loading_view"
                    app:noNetworkView="@layout/custom_no_network_view">

                    <cn.finalteam.loadingviewfinal.GridViewFinal
                        xmlns:resh="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/content_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:numColumns="2"
                        resh:loadMoreMode="scroll"
                        android:horizontalSpacing="5dp"
                        android:padding="5dp"
                        android:scrollbars="none"
                        android:verticalSpacing="5dp" />
                </com.classic.common.MultipleStatusView>
            </cn.finalteam.loadingviewfinal.PtrClassicFrameLayout>
        </FrameLayout>
    </LinearLayout>



</LinearLayout>
